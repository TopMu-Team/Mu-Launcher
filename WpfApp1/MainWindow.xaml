<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow"
        Height="768" Width="1366"
        >

    <Grid>
        <Image Source="/Resources/Background.png" Stretch="Fill" />
        <Canvas>
            <Button Opacity="0" Cursor="Hand" HorizontalAlignment="Left" Canvas.Bottom="0" VerticalAlignment="Top" Height="25" Width="96" Click="Button_Start" Canvas.Left="975" Canvas.Top="573"/>
            <Button Opacity="0" Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="297" Click="Button_Click_2" Canvas.Left="125" Canvas.Top="435"/>
            <Button Cursor="Hand" Opacity="0" HorizontalAlignment="Left" Canvas.Bottom="0" VerticalAlignment="Top" Height="24" Width="24" Click="Button_Minimized" Canvas.Left="1112" Canvas.Top="142"/>
            <Button Opacity="0" Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="24" Click="Button_Close" Canvas.Left="1141" Canvas.Top="142"/>
            <ProgressBar x:Name="totalProgressBar" Minimum="0" Maximum="100"  Height="9" VerticalAlignment="Top" Width="471" Canvas.Left="483" Canvas.Top="580"/>
            <ProgressBar x:Name="updateProgressBar" Minimum="0" Maximum="100" Height="10"  Width="426" Canvas.Left="517" Canvas.Top="545"/>
            <Button x:Name="Setting" Cursor="Hand" Opacity="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="29" Width="123" Click="Setting_Click" Canvas.Left="948" Canvas.Top="539"/>
            <CheckBox x:Name="windowModeCheckBox"  IsChecked="{Binding Path=WindowMode}"  HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.751,2.917" Canvas.Left="975" Canvas.Top="629"/>
            <Label Name="serverTime" Foreground="AliceBlue"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="208" Height="34" FontSize="16" Canvas.Left="431" Canvas.Top="610" />
            <Label Name="connectServer" HorizontalAlignment="Left" Margin="768,452,0,0" VerticalAlignment="Top" FontSize="16" Width="102" Height="39"/>
            <Label Name="gameServer" HorizontalAlignment="Left" Margin="768,500,0,0" VerticalAlignment="Top"  FontSize="16" Width="102" Height="36"/>
            <Label Name="status" Width="300" Height="30" Foreground="AliceBlue" VerticalAlignment="Top" FontSize="16" Canvas.Left="586" Canvas.Top="500" />
            <Label Content="Window Mode" Foreground="AliceBlue" Canvas.Left="996" Canvas.Top="624"/>
            <Label Content="" FontSize="16" FontWeight="Bold" Name="TotalProgressText" Foreground="DarkRed" Canvas.Left="698" Canvas.Top="568"/>
            <Label Content="" FontSize="16" FontWeight="Bold" Name="UpdateProgressText" Foreground="DarkRed" Canvas.Left="698" Canvas.Top="532"/>
        </Canvas>
    </Grid>
</Window>
